@model Inmobiliaria_.Net_Core.Models.LoginView

<h4 class="display-6">Acceder</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Usuarios" asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control" type="email"/>
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clave" class="control-label"></label>
                <input asp-for="Clave" class="form-control" />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Entrar" class="btn btn-dark" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
    </div>
</div>