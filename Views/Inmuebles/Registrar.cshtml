@model inmobiliaria.Models.Inmueble

@{
    ViewData["Title"] = "Registrar";
    var propietarios = (IList<Propietario>)ViewData["Propietarios"];
}

<h1>Registrar</h1>

<h4>Inmueble</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Registrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" required />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select class="form-select" name="Tipo" id="Tipo" required>
                    <option value="">Seleccione un tipo</option>
                    <option value="Departamento">Departamento</option>
                    <option value="Casa">Casa</option>
                    <option value="Terreno">Terreno</option>
                    <option value="Oficina">Oficina</option>
                    <option value="Local">Local</option>
                    <option value="Deposito">Deposito</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ambientes" class="control-label"></label>
                <input asp-for="Ambientes" class="form-control" type="number" required/>
                <span asp-validation-for="Ambientes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" type="number" required/>
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                    <select class="form-select" name="Estado" required>
                        <option value="">Seleccione un estado</option>
                        <option value=true>Disponible</option>
                        <option value=false>No Disponible</option>
                    </select>
            </div>
            <div class="form-group">
                <label asp-for="PropietarioId" class="control-label"></label>
                <select class="form-select" name="PropietarioId" required>
                    <option value="">Seleccione un Propietario</option>
					@foreach (var item in propietarios)
					{
						<option value="@item.Id">@(item.ToString())</option>
					}
				</select>
                <span asp-validation-for="PropietarioId" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>
<br>
<div>
    <a asp-action="Index">Volver</a>
</div>

